{% extends 'baseback.html.twig' %}

{% block content4 %}


    <main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-file-text-o"></i> Niveau </h1>
            <p>A Printable Invoice Format</p>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
            <li class="breadcrumb-item"><a href="#">Home</a></li>
        </ul>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <section class="invoice">
                    <div class="row mb-4">
                        <div class="col-6">
                            <h2 class="page-header"><i class="fa fa-globe"></i> </h2>
                        </div>
                        <div class="col-6">
                            <h5 class="text-right">Date du création: {{ niveau.dateCreationNiveau |date}}</h5>
                        </div>
                    </div>
                    <div class="row invoice-info">
                        <div class="col-4">
                            <b>Invoice #007612</b><br>
                            <br><b>ID:</b> {{ niveau.id }} <br><b>Niveau:</b> {{ niveau.rangeLevel }}<br>
                            </div>

                    </div>

                        <div class="col-4 text-right" style="right: -550px;">
                            <a href="{{ path('niveau_index') }}">Retour a la liste</a>

                        </div>
                    <div class="row">
                        <div class="col-12 table-responsive">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nom du test</th>
                                    <th>Niveau</th>
                                    <th>Durée</th>
                                    <th>Score</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>{{ niveau.id }}</td>


                                    <td>{{ niveau.evaluation.libelle }}</td>


                                    <td>{{ niveau.rangeLevel }}</td>


                                    <td>{{ niveau.temps }}</td>

                                    <td>{{ niveau.score }}</td>
                                    <td>
                                         <div>
                                            <b> <a href="{{ path('niveau_edit', { 'id': niveau.id }) }}">Modifier</a></b>
                                            <br><b><a href="{{ path('niveau_edit', { 'id': niveau.id }) }}">Supprimer</a>
                                            </b>

                                         </div>

                                    </td>
                                </tr>

                    </tbody>
                    </table>


                            <div class="row d-print-none mt-2">
                                <div class="col-12 text-right">
                                    <a class="btn btn-primary" href="javascript:window.print();" target="_blank">
                                        <i class="fa fa-print">
                                        </i> Print</a>
                                </div>

                            </div>

                        </div>
                    </div>
                </section>

            </div>
        </div>
    </div>


    <ul>



    </ul>









{% endblock %}