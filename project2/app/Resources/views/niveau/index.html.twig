    <table>
        <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>Nom du test</th>
                <th>Niveau</th>
                <th>Question</th>
            </tr>
        </thead>

        <tbody>

        {% for niveau in niveaus %}
