                    </li>
                </td>
                <td>{{ niveau.evaluation.libelle }}</td>
                <td>{{ niveau.rangeLevel }}</td>
                <td>{{ niveau.questions.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
